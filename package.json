{
  "name": "adithyabhat.com",
  "author": "@adithyabhat17",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test:coverage": "jest --coverage -u",
    "test-all": "yarn lint && yarn type-check && yarn test:coverage",
    "build": "yarn test-all && next build",
    "build:now": "next build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "dayjs": "^1.8.28",
    "framer-motion": "^2.9.4",
    "next": "^10.0.2",
    "react": "^16.13.1",
    "react-datocms": "^1.2.6",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.0.4",
    "react-intersection-observer": "^8.30.1",
    "remark": "^12.0.0",
    "remark-html": "^11.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.3.0",
    "@testing-library/user-event": "^12.0.4",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autoprefixer": "^10.0.2",
    "babel-jest": "^25.2.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "node-mocks-http": "^1.9.0",
    "postcss": "^8.1.8",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "tailwindcss": "^2.0.1",
    "test-listen": "^1.1.0",
    "ts-jest": "^26.1.1",
    "typescript": "^4.1.2"
  }
}
