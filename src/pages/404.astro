---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/astro/Container.astro';
---

<PageLayout title="404 - Page not found">
  <Container>
    <div class="flex flex-col items-center justify-center text-center py-32 relative" data-animate>
      <!-- Background 404 -->
      <div class="absolute inset-0 flex items-center justify-center pointer-events-none select-none">
        <span class="font-display text-[12rem] md:text-[20rem] font-800 text-[var(--bg-surface)] leading-none tracking-tighter">
          404
        </span>
      </div>

      <div class="relative z-10">
        <h1 class="font-display text-4xl md:text-5xl tracking-tight mb-4">
          Page not found
        </h1>
        <p class="font-body text-lg text-[var(--text-muted)] mb-10 max-w-md mx-auto">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a href="/" class="btn-primary">Go home</a>
      </div>
    </div>
  </Container>
</PageLayout>
