---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/astro/Container.astro';
---

<PageLayout title="404 - Page not found">
  <Container>
    <div class="flex flex-col items-center justify-center text-center py-20" data-animate>
      <!-- Animated 404 illustration using CSS instead of Lottie -->
      <div class="relative mb-8">
        <svg width="300" height="200" viewBox="0 0 300 200" class="animate-float">
          <text x="50%" y="50%" dominant-baseline="central" text-anchor="middle"
            class="font-serif" fill="url(#grad)" font-size="120" opacity="0.15">
            404
          </text>
          <defs>
            <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:#153ec4" />
              <stop offset="50%" style="stop-color:#99d4fb" />
              <stop offset="100%" style="stop-color:#4497f8" />
            </linearGradient>
          </defs>
        </svg>
      </div>

      <h1 class="font-serif text-4xl mb-4">
        Oops, Page not found!
      </h1>
      <p class="font-sans text-lg text-[var(--muted-foreground)] mb-8">
        Looks like this page doesn't exist.
      </p>
      <a href="/" class="btn-primary text-lg">Go Home</a>
    </div>
  </Container>
</PageLayout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
