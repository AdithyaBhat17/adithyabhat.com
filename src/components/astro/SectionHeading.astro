---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['flex items-center gap-4', className]} data-section-heading data-animate>
  <h2 class="font-display text-2xl md:text-3xl tracking-tight text-[var(--text)]">
    <slot />
  </h2>
  <span class="flex-1 h-[1px] bg-[var(--border)]"></span>
</div>
