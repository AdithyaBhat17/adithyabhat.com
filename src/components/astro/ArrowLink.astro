---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  class="inline-flex items-center gap-2 mt-10 font-body text-sm font-medium text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors group"
>
  {text}
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 20 20"
    width="16"
    fill="currentColor"
    class="transition-transform duration-300 group-hover:translate-x-1.5"
  >
    <path
      fill-rule="evenodd"
      d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
      clip-rule="evenodd"
    />
  </svg>
</a>
