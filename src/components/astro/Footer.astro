---
import Socials from './Socials.astro';

const footerRoutes = [
  { name: 'About', link: '/about' },
  { name: 'Blog', link: '/blog' },
  { name: 'Work', link: '/work' },
  { name: 'Contact', link: '/contact' },
  { name: 'Resume', link: '/resume.pdf' },
  { name: 'Uses', link: '/uses' },
  { name: 'Legal', link: '/legal' },
];

const currentPath = Astro.url.pathname;
---

<footer class="px-6 md:px-12 lg:px-20 xl:px-32">
  <hr class="gradient-line" />

  <div class="py-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-8">
    <!-- Left: Logo + name -->
    <div class="flex items-center gap-3">
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <img
          class="h-9 w-9"
          src="/static/logo_white.svg"
          alt="Adithya NR logo"
        />
        <span class="font-display text-sm font-semibold text-[var(--text)] tracking-tight">
          adithya nr
        </span>
      </a>
    </div>

    <!-- Center: Nav links -->
    <ul class="flex flex-wrap gap-x-6 gap-y-2">
      {footerRoutes.map((route) => (
        <li>
          <a
            href={route.link}
            class:list={[
              'text-sm font-body transition-colors duration-200',
              currentPath.startsWith(route.link)
                ? 'text-[var(--text)]'
                : 'text-[var(--text-muted)] hover:text-[var(--text)]'
            ]}
          >
            {route.name}
          </a>
        </li>
      ))}
    </ul>

    <!-- Right: Socials -->
    <Socials />
  </div>
</footer>
