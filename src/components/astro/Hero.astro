---
import Socials from './Socials.astro';
---

<section class="hero-section relative min-h-[calc(100vh-5rem)] flex flex-col justify-center overflow-hidden">
  <!-- Floating geometric shapes -->
  <div class="hero-shapes" aria-hidden="true">
    <div class="shape shape-circle"></div>
    <div class="shape shape-diamond"></div>
    <div class="shape shape-square"></div>
    <div class="shape shape-ring"></div>
    <div class="shape shape-cross"></div>
    <div class="shape shape-dot"></div>
  </div>

  <div class="w-full px-6 md:px-12 lg:px-20 xl:px-32 relative z-10">
    <!-- Role label -->
    <div data-hero-reveal>
      <span class="hero-role-text">UX Engineer</span>
    </div>

    <!-- Greeting -->
    <div class="mt-6" data-hero-reveal>
      <p class="hero-greeting">Hey, I'm</p>
    </div>

    <!-- Name with cursor -->
    <div data-hero-reveal>
      <h1 class="hero-name">
        Adithya<span class="hero-dot">.</span>
      </h1>
    </div>

    <!-- Description -->
    <div data-hero-reveal>
      <p class="hero-desc mt-6 max-w-lg">
        A UX engineer in Abu Dhabi, building thoughtful digital
        products. Currently shaping the Conversational CX platform at{' '}
        <a
          href="https://yellow.ai/"
          target="_blank"
          rel="noopener noreferrer"
          class="hero-link"
        >
          yellow.ai
        </a>
      </p>
    </div>

    <!-- CTAs -->
    <div class="mt-8 flex flex-wrap items-center gap-4" data-hero-reveal>
      <a href="/work" class="btn-primary">View my work</a>
      <a href="/contact" class="btn-outlined">Get in touch</a>
    </div>

    <!-- Socials -->
    <div class="mt-10" data-hero-reveal>
      <Socials />
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-cue">
    <div class="scroll-track">
      <div class="scroll-glow"></div>
    </div>
    <svg class="scroll-chevrons" width="14" height="24" viewBox="0 0 14 24" fill="none" overflow="visible">
      <path class="chev chev-1" d="M1 2l6 5 6-5" stroke="var(--accent)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path class="chev chev-2" d="M1 9l6 5 6-5" stroke="var(--accent)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path class="chev chev-3" d="M1 16l6 5 6-5" stroke="var(--accent)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>

  <style>
    /* ===== ROLE LABEL ===== */
    .hero-role-text {
      font-family: 'Google Sans Code', 'JetBrains Mono', 'SF Mono', monospace;
      font-size: clamp(0.7rem, 1.2vw, 0.875rem);
      letter-spacing: 0.3em;
      text-transform: uppercase;
      color: var(--accent);
    }

    /* ===== GREETING ===== */
    .hero-greeting {
      font-family: 'Bricolage Grotesque', Georgia, serif;
      font-size: clamp(1.25rem, 2.5vw, 1.75rem);
      font-weight: 400;
      color: var(--text-secondary);
      line-height: 1.4;
      margin-bottom: 0.25rem;
    }

    /* ===== NAME ===== */
    .hero-name {
      font-family: 'Bricolage Grotesque', Georgia, serif;
      font-size: clamp(3.5rem, 10vw, 8rem);
      font-weight: 800;
      line-height: 1;
      letter-spacing: -0.03em;
      color: var(--text);
      cursor: default;
      transition: color 0.3s ease;
    }

    .hero-name:hover {
      color: var(--accent);
    }

    .hero-dot {
      color: var(--accent);
      transition: color 0.3s ease;
    }

    .hero-name:hover .hero-dot {
      color: var(--text);
    }

    /* ===== DESCRIPTION ===== */
    .hero-desc {
      font-size: clamp(1.125rem, 2vw, 1.25rem);
      line-height: 1.7;
      color: var(--text-secondary);
    }

    .hero-link {
      color: var(--text);
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .hero-link:hover {
      color: var(--accent);
    }

    /* ===== FLOATING GEOMETRIC SHAPES ===== */
    .hero-shapes {
      position: absolute;
      inset: 0;
      pointer-events: none;
      z-index: 0;
      overflow: hidden;
    }

    .shape {
      position: absolute;
      border: 1.5px solid var(--accent);
      opacity: 0.15;
    }

    .shape-circle {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      top: 18%;
      right: 12%;
      animation: shapeFloat1 9s ease-in-out infinite;
    }

    .shape-diamond {
      width: 18px;
      height: 18px;
      top: 55%;
      right: 22%;
      animation: shapeFloat2 11s ease-in-out infinite;
    }

    .shape-square {
      width: 22px;
      height: 22px;
      border-radius: 5px;
      bottom: 22%;
      left: 6%;
      animation: shapeFloat3 13s ease-in-out infinite;
    }

    .shape-ring {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      top: 35%;
      left: 15%;
      border-width: 1px;
      animation: shapeFloat4 14s ease-in-out infinite;
    }

    .shape-cross {
      width: 16px;
      height: 16px;
      border: none;
      top: 12%;
      right: 35%;
      animation: shapeFloat5 10s ease-in-out infinite;
    }

    .shape-cross::before,
    .shape-cross::after {
      content: '';
      position: absolute;
      background: var(--accent);
      border-radius: 1px;
    }

    .shape-cross::before {
      width: 100%;
      height: 1.5px;
      top: 50%;
      transform: translateY(-50%);
    }

    .shape-cross::after {
      width: 1.5px;
      height: 100%;
      left: 50%;
      transform: translateX(-50%);
    }

    .shape-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--accent);
      border: none;
      bottom: 35%;
      right: 8%;
      opacity: 0.2;
      animation: shapeFloat6 8s ease-in-out infinite;
    }

    @keyframes shapeFloat1 {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      33%      { transform: translate(15px, -20px) rotate(120deg); }
      66%      { transform: translate(-10px, 12px) rotate(240deg); }
    }

    @keyframes shapeFloat2 {
      0%, 100% { transform: rotate(45deg) translate(0, 0); }
      50%      { transform: rotate(225deg) translate(18px, -14px); }
    }

    @keyframes shapeFloat3 {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25%      { transform: translate(12px, 10px) rotate(90deg); }
      50%      { transform: translate(-8px, 18px) rotate(180deg); }
      75%      { transform: translate(-14px, -8px) rotate(270deg); }
    }

    @keyframes shapeFloat4 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50%      { transform: translate(-12px, -16px) scale(0.85); }
    }

    @keyframes shapeFloat5 {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      50%      { transform: translate(10px, 12px) rotate(90deg); }
    }

    @keyframes shapeFloat6 {
      0%, 100% { transform: translate(0, 0); opacity: 0.2; }
      50%      { transform: translate(-8px, -10px); opacity: 0.35; }
    }

    /* ===== SCROLL INDICATOR ===== */
    .scroll-cue {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
    }

    .scroll-track {
      width: 1px;
      height: 48px;
      background: var(--border);
      position: relative;
      overflow: hidden;
      border-radius: 1px;
    }

    .scroll-glow {
      width: 100%;
      height: 16px;
      background: linear-gradient(to bottom, transparent, var(--accent), transparent);
      position: absolute;
      top: -16px;
      animation: travelDown 2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    }

    .chev {
      opacity: 0;
      animation: chevPulse 2s ease-in-out infinite;
    }
    .chev-1 { animation-delay: 0s; }
    .chev-2 { animation-delay: 0.15s; }
    .chev-3 { animation-delay: 0.3s; }

    @keyframes travelDown {
      0%   { top: -16px; opacity: 0; }
      20%  { opacity: 1; }
      80%  { opacity: 1; }
      100% { top: 48px; opacity: 0; }
    }

    @keyframes chevPulse {
      0%, 100% { opacity: 0.15; transform: translateY(0); }
      50%      { opacity: 0.8; transform: translateY(3px); }
    }

    /* ===== REDUCED MOTION ===== */
    @media (prefers-reduced-motion: reduce) {
      .shape { animation: none; }
      .scroll-glow, .chev { animation: none; }
      .chev { opacity: 0.5; }
      .scroll-glow { top: 16px; opacity: 1; }
    }
  </style>
</section>

<script>
  function initHero() {
    const hero = document.querySelector<HTMLElement>('.hero-section');
    if (!hero) return;

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // Staggered entrance â€” JS-driven so content is visible by default
    if (!prefersReducedMotion) {
      const reveals = hero.querySelectorAll<HTMLElement>('[data-hero-reveal]');
      reveals.forEach((el) => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(16px)';
      });

      reveals.forEach((el, i) => {
        setTimeout(() => {
          el.style.transition = 'opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
          el.style.opacity = '1';
          el.style.transform = 'translateY(0)';
        }, 100 + i * 100);
      });
    }

  }

  initHero();
  document.addEventListener('astro:after-swap', initHero);
</script>
